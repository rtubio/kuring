# Basic configuration for the execution of the automated scripts

USER="$( whoami )"
LOG_LEVEL='debug'

CONFIG_DIR="$(pwd)/config"
CONFIG_CELERY="$CONFIG_DIR/celery.conf"
REQUIREMENTS_FILE="$CONFIG_DIR/requirements.txt"

STATIC_DIR="$(pwd)/static"

PACKAGES_FILE="$CONFIG_DIR/debian.dev.packages"

SCRIPTS_DIR="$(pwd)/scripts"
db_sh="$SCRIPTS_DIR/pgsql.sh"
db_django_sh="$SCRIPTS_DIR/django.sh"
django_skg="$SCRIPTS_DIR/djsk.py"
influxdb_py="$SCRIPTS_DIR/influx.py"
ardoven_add_sh="$SCRIPTS_DIR/ardoven/addArduino.sh"
ardoven_del_sh="$SCRIPTS_DIR/ardoven/delArduino.sh"
ardoven_udev="$SCRIPTS_DIR/ardoven/arduino-udev.rules"

UDEV_RULESD_DIR="/etc/udev/rules.d/"
UDEV_SCRIPTS_DIR="/usr/local/bin"
UDEV_ARDUINO_RULES="$UDEV_RULESD_DIR/50-arduino.rules"

SECRETS_DIR="$(pwd)/.__skr__"
SECRETS_DB="$SECRETS_DIR/db.env"
SECRETS_MAIL="$SECRETS_DIR/mail.json"
SECRETS_DJANGO="$SECRETS_DIR/django.json"
SECRETS_INFLUXDB="$SECRETS_DIR/influxdb.json"

TMP_DIR='/tmp'
TMP_SQLBATCH="$TMP_DIR/sqlcommands"

DJANGO_APP_NAME='kuring'
DJANGO_APP_DIR="$(pwd)/$DJANGO_APP_NAME"

VENV_DIR="$(pwd)/.env"
VENV_ACTIVATE="$VENV_DIR/bin/activate"
