{
    "python.pythonPath": ".kuring/bin/python",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--config=${workspaceFolder}/conf/flake8.conf",
        "--verbose"
    ],
    "search.exclude": {
        ".skr/": true,
        ".kuring/": true
    },
    "files.exclude": {
        ".skr/": true,
        ".kuring/": true,
        "**/migrations/": true
    },
    "macros": {
        "gitCommitSync": [
            "git.commitAll", "git.sync"
        ]
    }
}